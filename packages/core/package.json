{
  "name": "@robota/core",
  "version": "0.1.0",
  "description": "Robota의 핵심 기능을 제공하는 패키지",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "ai",
    "agent",
    "llm",
    "function-calling",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.1.3",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}